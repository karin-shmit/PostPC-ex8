<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculationRow"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/calcDescription"
        android:layout_width="350dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:background="#FFC107"
        android:gravity="top"
        android:text="Find roots"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.2" />


    <ImageButton
        android:id="@+id/deleteCalcButton"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/calcDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calcDescription"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ProgressBar
        android:id="@+id/calcProgress"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_width="223dp"
        android:layout_height="57dp"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/deleteCalcButton"
        app:layout_constraintTop_toBottomOf="@+id/calcDescription"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/progressPercentage"
        android:layout_width="28dp"
        android:layout_height="19dp"
        android:text="100%"
        android:visibility="invisible"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/deleteCalcButton"
        app:layout_constraintTop_toBottomOf="@+id/calcDescription"
        app:layout_constraintVertical_bias="0.599" />


</androidx.constraintlayout.widget.ConstraintLayout>